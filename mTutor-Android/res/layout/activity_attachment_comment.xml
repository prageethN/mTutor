<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="@drawable/gradient_bg">



	<LinearLayout android:orientation="vertical"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:id="@+id/linLayout_tabSuggestions">
		<TextView android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:text=""
			android:textColor="@color/black" android:paddingTop="10dip" />
		
		<EditText android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:hint="Respond to this attachment..."
			android:textColor="@color/black" android:cursorVisible="false"
			android:editable="false" android:onClick="onClickComment" android:id="@+id/txtClickComment"/>
			<View android:id="@+id/divider" android:background="@color/title_background"
			android:layout_width="fill_parent" android:layout_height="1dp"
			android:longClickable="true" />
			
		<ListView android:layout_height="wrap_content"
			android:layout_width="fill_parent" android:id="@+id/lvComments" />
	</LinearLayout>

</LinearLayout>